<header>
    <div class="grid grid-full">
        <div class="col-2-3">
            <h1 class="wordmark">Deine Welt. Galaxie. Spielspass.<br>
                Pixel. Run. <span class="last">Namics.</span></h1>
        </div>
        <div class="col-1-3 align-right">
            <h2 class="question">Weltauswahl</h2>
        </div>
    </div>
</header>
<div class="body space-xl">
    <div class="grid grid-full grid-border grid-lg-img js-s2-in" data-process="select" data-use="world" data-key="world">
        {{#each worldsArray}}
            <div class="col-1-4 js-selectable" data-world="{{this}}">
                <h2 class="world-select-title">{{this}}</h2>
            </div>
        {{/each}}
    </div>
</div>
<footer>
    <i class="icon icon-arrow-right next js-next"></i>
</footer>
