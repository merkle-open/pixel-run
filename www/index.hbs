<div class="autosize pregame steps">
    <div class="step js-step-1 js-step-start" data-next="js-step-2" data-noprocess="true">
        <div class="header">
            <div class="grid grid-full">
                <div class="col-2-3">
                    <h1 class="wordmark">Wilkommen. Spiel. Challenge. Jump.<br>
                        Pixel. Run. <span class="last">Namics.</span></h1>
                </div>
            </div>
        </div>
        <div class="body fill">
            <img src="dist/assets/img/thumbnails/game.png" alt="Game Screenshot" />
        </div>
        <div class="footer">
            <i class="icon icon-arrow-right next js-next"></i>
        </div>
    </div>
    <div class="step hidden js-step-2" data-input="js-s2-in" data-next="js-step-3">
        <div class="header">
            <div class="grid grid-full">
                <div class="col-2-3">
                    <h1 class="wordmark">Individuell. Auswahl. Avatar. <br>
                        Pixel. Run. <span class="last">Namics.</span></h1>
                </div>
                <div class="col-1-3 align-right">
                    <h2 class="question">Spielerauswahl</h2>
                </div>
            </div>
        </div>
        <div class="body space-xl">
            <div class="grid js-s2-in" data-process="input" data-read="js-input" data-key="players">
                <div class="col-1-3" data-value="techie">
                    <img src="dist/assets/img/avatars/nude/techie.png" alt="Techie" />
                    <input type="text" class="center js-input" placeholder="Player 1" data-index="0">
                </div>
                <div class="col-1-3 selectable" data-value="designer">
                    <img src="dist/assets/img/avatars/nude/designer.png" alt="Designer" />
                    <input type="text" class="center js-input" placeholder="Player 2" data-index="1">
                </div>
                <div class="col-1-3 selectable" data-value="consultant">
                    <img src="dist/assets/img/avatars/nude/consultant.png" alt="Consultant" />
                    <input type="text" class="center js-input" placeholder="Player 3" data-index="2">
                </div>
            </div>
        </div>
        <div class="footer">
            <i class="icon icon-arrow-right next js-next"></i>
        </div>
    </div>
    <div class="step hidden js-step-3" data-next="js-step-4" data-input="js-s3-in">
        <div class="header">
            <div class="grid grid-full">
                <div class="col-2-3">
                    <h1 class="wordmark">Deine Welt. Galaxie. Spielspass.<br>
                        Pixel. Run. <span class="last">Namics.</span></h1>
                </div>
                <div class="col-1-3 align-right">
                    <h2 class="question">Weltauswahl</h2>
                </div>
            </div>
        </div>
        <div class="body space-xl">
            <div class="grid grid-full grid-border grid-lg-img js-s3-in" data-process="select" data-use="world" data-key="world">
                <div class="col-1-3 js-selectable" data-world="space">
                    <img src="dist/assets/img/thumbnails/space.png" alt="Space World" />
                </div>
                <div class="col-1-3 js-selectable" data-world="candy">
                    <img src="dist/assets/img/thumbnails/candy.png" alt="Candy World" />
                </div>
            </div>
        </div>
        <div class="footer">
            <i class="icon icon-arrow-right next js-next"></i>
        </div>
    </div>
    <div class="step hidden js-step-4" data-end="true">
        <h5 class="fullscreen-text">Have Fun!</h5>
    </div>
</div>
<main id="js-launch-phaser-game"></main>
<div class="hidden js-finished resume">
    <h1>Game Over</h1>
    <!--<h2>Gratulation {p1}! Du hast das Spiel mit einem Score von #{p1s} gewonnen.</h2>-->
    <table>
        <thead>
            <tr>
                <td>Platzierung</td>
                <td>Spieler</td>
                <td>Score</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>#1</td>
                <td>{p1}</td>
                <td>{p1s}</td>
            </tr>
            <tr>
                <td>#2</td>
                <td>{p2}</td>
                <td>{p2s}</td>
            </tr>
            <tr>
                <td>#3</td>
                <td>{p3}</td>
                <td>{p3s}</td>
            </tr>
        </tbody>
    </table>
    <div class="grid grid-sm actions">
        <div class="col-1-2">
            <button role="button">
                <a href="/" title="Restart Game">
                    <i class="icon icon-loop"></i>
                </a>
            </button>
        </div>
        <div class="col-1-2">
            <button role="button">
                <a href="/scores" title="Highscores">
                    <i class="icon icon-trophy"></i>
                </a>
            </button>
        </div>
    </div>
</div>
