{
    "clean": {
        "dist": "./dist/**/*.*"
    },
    "bundle": {
        "name": "app",
        "target": "./dist/bin"
    },
    "dependencies": {
        "target": "./dist",
        "name": "dependencies",
        "files": [
            "./bower_components/phaser/build/phaser.js",
            "./bower_components/browser-storage/browser-storage.min.js",
            "./app/provider/extend.js",
            "./app/provider/globals.js",
            "./app/provider/settings.js"
        ]
    },
    "app": {
        "minify": false,
        "target": "./dist",
        "name": "application",
        "files": [
            "./app/provider/util.js",
            "./app/classes/*.js",
            "./app/states/*.js",
            "./app/main.js"
        ]
    },
    "styles": {
        "target": "./dist/bin",
        "name": "app",
        "files": [
            "./assets/css/reset.css",
            "./assets/css/grid.css",
            "./assets/css/typo.css",
            "./assets/css/*.css"
        ]
    }
}
