{
    "version": "0.0.21-beta",
    "buildFile": ".build",
    "release": [
        "./dist/**",
        "LICENSE",
        ".build",
        "index.html",
        "scores.html"
    ],
    "lint": {
        "path": "./app/**/*.js"
    },
    "clean": {
        "dist": "./dist/**/*.*"
    },
    "copy": {
        "./assets/**/*": "./dist/assets/"
    },
    "bundle": {
        "name": "app",
        "target": "./dist/bin"
    },
    "dependencies": {
        "target": "./dist",
        "name": "dependencies",
        "files": [
            "./bower_components/phaser/build/phaser.js",
            "./bower_components/jquery/dist/jquery.js",
            "./bower_components/browser-storage/browser-storage.js",
            "./app/provider/globals.js",
            "./app/provider/settings.js",
            "./app/provider/steps.js"
        ]
    },
    "app": {
        "minify": false,
        "target": "./dist",
        "name": "application",
        "files": [
            "./app/provider/util.js",
            "./app/provider/store.js",
            "./app/classes/*.js",
            "./app/states/*.js",
            "./app/main.js"
        ]
    },
    "styles": {
        "target": "./dist/bin",
        "name": "app",
        "files": [
            "./assets/css/reset.css",
            "./assets/css/grid.css",
            "./assets/css/typo.css",
            "./assets/css/*.css"
        ]
    }
}
